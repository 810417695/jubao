<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <LinearLayout
        android:id="@+id/Top"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">
            <ImageView
                android:paddingLeft="@dimen/fanhui_padding_left"
                android:paddingRight="@dimen/fanhui_padding_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fanhui"/>
        </RelativeLayout>
        <TextView
            android:layout_weight="3"
            android:id="@+id/addShangpin_title"
            android:textColor="@color/login_text_color"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_bottom"
            android:layout_marginBottom="@dimen/top_bottom"
            android:text="新笔记"
            android:textSize="@dimen/login_title_size"
            android:layout_toRightOf="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
        </TextView>
        <TextView
            android:id="@+id/fabu"
            android:layout_weight="1"
            android:textColor="@color/login_text_color"
            android:gravity="center"
            android:layout_marginTop="@dimen/top_bottom"
            android:layout_marginBottom="@dimen/top_bottom"
            android:text="发布"
            android:textSize="@dimen/wancheng_size"
            android:layout_toRightOf="@+id/addShangpin_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <EditText
            android:hint="请填写标题"
            android:paddingLeft="10dp"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="@dimen/add_left_right"
            android:layout_marginRight="@dimen/add_left_right"
            android:background="#f6f6f6"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp" />

        <EditText
            android:gravity="top"
            android:hint="请填写标题"
            android:padding="10dp"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="@dimen/add_left_right"
            android:layout_marginRight="@dimen/add_left_right"
            android:background="#f6f6f6"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="160dp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/add_left_right"
            android:layout_marginRight="@dimen/add_left_right"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgs"/>
                <ImageView
                    android:src="@drawable/qu_tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qu_img"
                    android:layout_toRightOf="@+id/imgs"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/add_img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgs2"/>
                <ImageView
                    android:src="@drawable/qu_tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qu_img2"
                    android:layout_toRightOf="@+id/imgs2"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/add_img3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgs3"/>
                <ImageView
                    android:src="@drawable/qu_tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qu_img3"
                    android:layout_toRightOf="@+id/imgs3"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/add_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upload_img_button_bg"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/textcolor"
            android:layout_marginLeft="@dimen/add_left_right"
            android:layout_marginRight="@dimen/add_left_right"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片（0/9）"/>
    </LinearLayout>
    

</LinearLayout>