<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fanhui_padding_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/biaoti"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/bianjidizhi"
            android:textColor="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baocun"
            android:layout_marginRight="@dimen/fanhui_padding_right"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/xian"
        android:layout_height="@dimen/xian" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/bianjidizhi_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="@dimen/paddingleft"
                android:paddingLeft="@dimen/paddingleft"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="@dimen/edit_top"
                    android:background="@drawable/shape_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editetext_height" />
                <TextView
                    android:layout_marginTop="@dimen/edit_top_ten"
                    android:text="@string/dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="@dimen/edit_top"
                    android:background="@drawable/shape_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editetext_height" />
                <EditText
                    android:hint="@string/xiangxidizhi_kuohao"
                    android:layout_marginTop="@dimen/edit_top"
                    android:background="@drawable/shape_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editetext_height" />
                <TextView
                    android:layout_marginTop="@dimen/edit_top_ten"
                    android:text="@string/dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="@dimen/edit_top"
                    android:background="@drawable/shape_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editetext_height" />
                <TextView
                    android:layout_marginTop="@dimen/edit_top_ten"
                    android:text="@string/youbian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="@dimen/edit_top"
                    android:background="@drawable/shape_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editetext_height" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/bianjidizhi_top"
                android:paddingLeft="@dimen/edit_top_ten"
                android:paddingRight="@dimen/edit_top_ten"
                android:background="@drawable/shape_border"
                android:layout_height="@dimen/editetext_height">
                <TextView
                    android:textSize="@dimen/text_size_bianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/morenfahuo"
                    android:layout_centerVertical="true"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/kaiguan_lvse"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/bianjidizhi_top"
                android:paddingLeft="@dimen/edit_top_ten"
                android:paddingRight="@dimen/edit_top_ten"
                android:background="@drawable/shape_border"
                android:layout_height="@dimen/editetext_height">
                <TextView
                    android:textSize="@dimen/text_size_bianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/morentuihuo"
                    android:layout_centerVertical="true"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/kaiguan_lvse"/>
            </RelativeLayout>
            <Button
                android:layout_marginTop="@dimen/editetext_height"
                android:text="@string/baocun"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_bianji"
                android:layout_width="match_parent"
                android:layout_height="@dimen/K_height"
                android:layout_marginLeft="@dimen/edit_top_ten"
                android:layout_marginRight="@dimen/edit_top_ten"
                android:background="@drawable/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
