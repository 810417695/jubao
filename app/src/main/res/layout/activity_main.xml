<com.best.cehua.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_top_bg_02" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="50dp" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:id="@+id/name"
                android:text="BlueMor"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="1113049482@qq.com"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_mail"
            android:layout_below="@id/ll1"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <com.best.cehua.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >
        <FrameLayout
            android:id="@+id/jiemian"
            android:layout_width="match_parent"
            android:layout_above="@+id/radio_fram"
            android:layout_height="match_parent">

        </FrameLayout>
        <RadioGroup
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_border"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_fram">
            <RadioButton
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableBottom="@drawable/radio_back_dianpu"
                android:id="@+id/dianpu"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="45dp" />
            <RadioButton
                android:layout_weight="0.1"
                android:button="@null"
                android:layout_gravity="center"
                android:drawableBottom="@drawable/radio_back_shangpin"
                android:id="@+id/shangpin"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="45dp" />
            <RadioButton
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:button="@null"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:drawableBottom="@drawable/radio_back_dingdan"
                android:id="@+id/dingdan"
                android:layout_width="0dp"
                android:layout_height="45dp" />
            <RadioButton
                android:layout_weight="0.1"
                android:paddingBottom="5dp"
                android:button="@null"
                android:layout_gravity="center"
                android:drawableBottom="@drawable/radio_back_dongtai"
                android:id="@+id/dongtai"
                android:layout_width="0dp"
                android:layout_height="45dp" />
        </RadioGroup>
    </com.best.cehua.MyRelativeLayout>

</com.best.cehua.DragLayout>