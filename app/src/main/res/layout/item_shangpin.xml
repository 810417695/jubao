<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/baobei_img"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp" />
        <TextView
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            android:id="@+id/baobei_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bianji"
            android:layout_toRightOf="@id/baobei_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="鼠标"/>
        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:layout_toRightOf="@id/baobei_img"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:text="￥"/>
        <TextView
            android:id="@+id/baobei_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:layout_toRightOf="@id/rmb"
            android:layout_marginTop="60dp"
            android:text="30.0"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/baobei_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="库存:"
                android:layout_marginTop="60dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:text="1"
                android:textSize="17dp"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baobei_kucun_shuliang"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
