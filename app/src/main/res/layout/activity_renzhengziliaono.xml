<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fanhui_padding_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="认证资料"
            android:textColor="@color/red"/>
    </RelativeLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/xian"/>
    <RelativeLayout
        android:background="@drawable/shape_border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginLeft="@dimen/fanhui_padding_left"
            android:layout_centerVertical="true"
            android:text="姓名："/>
        <EditText
            android:layout_alignParentRight="true"
            android:hint="需要与身份证上一致"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证图片(注意保持内容清晰)"/>
    <RelativeLayout
        android:background="@drawable/shape_border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="70dp"
            android:id="@+id/zhengmian"
            android:layout_height="70dp"
            android:src="@drawable/upload_img_button_bg"
            android:layout_marginLeft="@dimen/fanhui_padding_left"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_alignParentRight="true"
            android:text="上传手持身份证正面照片"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="70dp"
            android:id="@+id/beimian"
            android:layout_height="70dp"
            android:src="@drawable/upload_img_button_bg"
            android:layout_marginLeft="@dimen/fanhui_padding_left"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_alignParentRight="true"
            android:text="上传手持身份证背面照片"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="40dp"
        android:text="提交"
        android:textColor="@color/white"
        android:onClick="tijiao"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"/>
</LinearLayout>
