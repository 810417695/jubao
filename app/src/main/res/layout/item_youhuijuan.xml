<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:background="@drawable/coupon_item_top_bg"
            android:id="@+id/relative"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满100元减一元"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:id="@+id/textView9" />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/coupon_item_bottom_bg"
            android:layout_below="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年至2016年初"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="21dp" />

            <TextView
                android:layout_below="@+id/textView10"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1张，已领取0张，已使用0张"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/textView10"
                android:layout_alignEnd="@+id/textView10" />
        </RelativeLayout>

        <ImageView
            android:src="@drawable/icon_big_coupon"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
