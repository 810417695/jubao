<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/biaoti"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:onClick="fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fanhui_padding_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="我的地址"
            android:textColor="@color/red"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/xiahuaxian"
        android:layout_below="@+id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"/>
    <ListView
        android:layout_above="@+id/tianjiadizhi"
        android:id="@+id/dizhilistview"
        android:layout_below="@+id/xiahuaxian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/tianjiadizhi"
        android:text="添加地址"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
