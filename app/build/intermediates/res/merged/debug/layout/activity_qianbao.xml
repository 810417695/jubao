<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="fanhui"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fanhui_padding_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/biaoti"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/zhanghumingxi"
            android:textColor="@color/red"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fanhui_padding_left"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_balance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jszh"
                android:textColor="@color/red"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"/>
    <LinearLayout
        android:layout_marginTop="@dimen/K_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/djs_height">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/K_top"
                android:textSize="@dimen/text_size_bianji"
                android:id="@+id/daijiesuan"
                android:text="@string/djs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/daijiesuan"
                android:text="@string/ling"
                android:textColor="@color/shouye_text_color"
                android:textSize="@dimen/djs_size"
                android:layout_marginTop="@dimen/mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/xian"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="@dimen/K_top"
                android:layout_centerHorizontal="true"
                android:id="@+id/kejiesuan"
                android:textSize="@dimen/text_size_bianji"
                android:text="@string/kjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/shouye_text_color"
                android:layout_marginTop="@dimen/mb"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/kejiesuan"
                android:text="@string/ling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/xian"
        android:layout_marginTop="@dimen/paddingright"
        android:layout_marginRight="@dimen/paddingright"
        android:layout_marginLeft="@dimen/paddingleft"
        android:layout_height="@dimen/xian" />
    <Button
        android:layout_marginTop="@dimen/b_height"
        android:onClick="jiesuan"
        android:text="我要结算"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="jiesuanjilv"
        android:background="@drawable/shape_border"
        android:layout_marginTop="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算记录"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fanhui_padding_left"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fanhui_padding_right"
            android:src="@drawable/icon_arrow_red"/>
    </RelativeLayout>
</LinearLayout>
